<div class="row col-sm-6">
  <%= form_for @assignment do |f| %>
    <div class="form-group">
      <%= f.label "Student" %>
      <%= collection_select(:student, :student_id, Student.all, :id, :name) %>
    </div>

    <div class="form-group">
      <%= f.label :name, 'Assignment Name' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :score, 'Score on Assignment' %>
      <%= f.text_field :score, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :total, 'Total Points Available' %>
      <%= f.text_field :total, class: 'form-control' %>
    </div>

    <%= f.submit %>
    &nbsp;or
    <%= link_to 'Cancel', assignments_path %>
  <% end %>
</div>